{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2021",
      "lib": ["ES2021"],
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
  